    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-zserio'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-zserio",
                    "--package=rust-zserio"
                ],
                "filter": {
                    "name": "rust-zserio",
                    "kind": "bin"
                }
            },
            "args": [
                "-o=tests/round-trip-tests/src",
                "tests/reference_modules",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests 'round-trip-tests'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=round-trip-tests",
                    "--package=round-trip-tests",
                ],
                "filter": {
                    "name": "round-trip-tests",
                    "kind": "bin",
                },
            },
            "args": [
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-zserio'",
            "cargo": {
                "args": [
                    "-o=tests/round-trip-tests/src",
                    "test/reference_modules",
                ],
                "filter": {
                    "name": "rust-zserio",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}